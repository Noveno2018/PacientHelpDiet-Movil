<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:backgroundTintMode="src_over"
        android:visibility="visible"
        tools:background="?android:attr/floatingToolbarItemBackgroundBorderlessDrawable">

        <TextView
            android:id="@+id/lbHorario"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbObservacion"
            android:layout_alignStart="@+id/lbObservacion"
            android:layout_below="@+id/lbFecha"
            android:text="Horario: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/lbObservacion"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lbHorario"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="Observacion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtHorario"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbHorario"
            android:layout_alignBottom="@+id/lbHorario"
            android:layout_toEndOf="@+id/lbHorario"
            android:layout_toRightOf="@+id/lbHorario"
            android:ems="10"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtObservaciones"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lbObservacion"
            android:layout_toEndOf="@+id/lbObservacion"
            android:layout_toRightOf="@+id/lbObservacion"
            android:autoSizeTextType="none"
            android:ems="10"
            android:inputType="text"
            android:keyboardNavigationCluster="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lbFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbHorario"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lbHorario"
            android:layout_toLeftOf="@+id/txtHorario"
            android:layout_toStartOf="@+id/txtHorario"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lbEspecificacion"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbObservacion"
            android:layout_alignStart="@+id/lbObservacion"
            android:layout_below="@+id/txtObservaciones"
            android:text="Especificac."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />/>


        <TextView
            android:id="@+id/txtEspecificacion"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/lbObservacion"
            android:layout_toEndOf="@+id/lbEspecificacion"
            android:layout_toRightOf="@+id/lbEspecificacion" />

    </RelativeLayout>

</LinearLayout>
